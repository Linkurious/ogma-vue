{
  "name": "ogma-vue3",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "serve": " serve",
    "build": "vue-cli-service build --target lib --name lib src/main.js",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "docg": "vue-docgen src/components/Ogma.vue docs/components",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "help": "vue-cli-service help build"
  },
  "main": "dist/lib.umd.min.js",
  "dependencies": {
    "@linkurious/ogma": "^4.0.7",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-mocha": "^4.5.15",
    "@vue/cli-service": "^4.5.15",
    "@vue/test-utils": "^2.0.0-0",
    "babel-eslint": "^10.1.0",
    "canvas": "^2.9.0",
    "chai": "^4.1.2",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0",
    "vue-cli-plugin-vuepress": "~0.1.1",
    "vue-docgen-cli": "^4.44.15",
    "vuepress": "^0.10.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
